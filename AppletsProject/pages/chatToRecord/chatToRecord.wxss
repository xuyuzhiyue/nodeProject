.RightSend{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  justify-content: flex-end;
}
image{
  width: 80rpx;
  height: 76rpx;
  margin-left: 20rpx;
}
.RightBox{
  position: relative;
  background: #85ef63;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-radius: 10rpx;
  padding: 10rpx 10rpx;
  max-width: 70%;
}
.RightArrow{
  position: absolute;
  top: 20%;
  left:100%;
  right: 0;
  width: 0;
  height: 0;
  border: solid 8rpx;
  border-color: #FFFFFF #FFFFFF #FFFFFF #85ef63;
}
/* тид */
.LeftSend{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
image{
  width: 80rpx;
  height: 76rpx;
  margin-right: 20rpx;
}
.LeftBox{
  background: #85ef63;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 10rpx;
  padding: 10rpx 10rpx;
  max-width: 70%;
}
.LeftArrow{
  position: absolute;
  top:20rpx;
  left: -16rpx;
  right: 0;
  width: 0;
  height: 0;
  border: solid 8rpx;
  border-color: #FFFFFF #85ef63 #FFFFFF #FFFFFF;
}
.sendMessage{
  bottom: 0;
  width: 100%;
  position: fixed;
  display: flex;
  background: rgb(241, 241, 239);
  padding: 20rpx 0;
}
.sendMessage input{
  border: 1rpx solid white;
  margin: 0 20rpx;
  height: 90rpx;
  background: white;
  border-radius: 10rpx;
  flex: 3;
}

.sendMessage button{
  border: 2rpx solid white;
  height: 90rpx;
  background: white;
  flex: 1;
  margin-right: 20rpx !important;
}