<view class="gwd_index">
 <!-- 搜索框的开始 -->
    <SearchInput></SearchInput>
    <!-- 轮播图 -->
    <view class="index_swiper">
    <!-- 1. swiper标签存在默认的宽度和高度 -->
    <!-- 宽度：100%*150px 高度 -->
    <!-- 2.image标签也存在默认的宽度和高度 -->
    <!-- 宽度 320px * 240px 高度 -->
    <!-- 3.设计图片和轮播图 -->
    <!-- 先看原图的大小 原图宽高：750 * 340 -->
    
    <!-- 让图片的高度自适应  宽度等于100% -->
    <!-- 让swiper的标签的高度 变成和图片的高一样 -->
    <!-- 默认屏幕宽度750rpx  -->
    <!-- 750 / 340 = 750 / x => x = 340rpx -->

    <!-- 图片标签  mode属性  渲染模式
         widthFix 让图片的标签宽高 和 图片的内容的宽高都等比例的发生变化
     -->
        <swiper autoplay indicator-dots circular indicator-active-color="#FFCA2A"> 
           <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
             <navigator >
                <image mode="widthFix" src="{{item.image_src}}"/>
             </navigator>
           </swiper-item>
        </swiper>
    </view>

    <!-- 导航开始 -->
    <view class="index_cate">
       <navigator wx:for="{{catesList}}" wx:key="id">
          <image mode="widthFix" src="{{item.image_src}}"/>
       </navigator>
    </view>
      
    <!-- 楼层 -->
    <view class="index_floor">
       <view class="floor_group" wx:for="{{floorList}}" 
       wx:for-item="item1"
       wx:for-index="index1"
       wx:key="floor_title"
       >
          <!-- 标题 -->
         <view class="floor_title">
           <image  src="{{item1.floor_title.image_src}}" mode="widthFix"/>
         </view> 
         <!-- 内容 -->
         <view class="floor_list">
           <navigator
           wx:for="{{item1.product_list}}"
            wx:for-item="item2"
            wx:for-index="index2"
            wx:key="name"
           >
              <image  src="{{item2.image_src}}" mode="{{index2===0?'widthFix':'scaleToFill'}}"/>
           </navigator>
         </view>
       </view>
    </view>
      
</view>