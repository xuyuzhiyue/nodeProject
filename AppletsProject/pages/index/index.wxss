swiper {
  margin: 20rpx 20rpx;
  background-color: var(--themeColor);
}
swiper .index_swiper swiper {
  width: 750rpx;
  height: 470rpx;
}
swiper .index_swiper swiper image {
  width: 100%;
  height: 100%;
}
.index_area {
  display: flex;
  flex-wrap: wrap;
}
.index_area .index_row {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  width: 25%;
}
.index_area .index_row .iconfont {
  color: var(--themeColor);
  font-size: 28px;
}
.index_floor .index_row {
  display: flex;
  margin: 20rpx;
}
.index_floor .index_row .index_video video {
  width: 250rpx;
  height: 200rpx;
}
.index_floor .index_row .index_text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.index_floor .index_row .index_text .index_name {
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.index_floor .index_row .index_text .index_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.index_floor .index_row .index_text .index_row .index_price {
  color: var(--themeColor);
}
.index_floor .index_row .index_text .index_row .index_pay {
  padding: 20rpx;
  background: #ec150e;
  color: white;
  margin-right: 20rpx;
}
