 <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
   <view class="fb_main">
     <view class="fb_title">问题的分类</view>
     <view class="fb_tips">
       <text bindtap="handleGoods" data-index="商品问题" class="{{Goods?'activeGoods':''}}">商品问题</text>
       <text bindtap="handleGoods" data-index="退款问题" class="{{Pay?'activeGoods':''}}">退款问题</text>  
       <text bindtap="handleGoods" data-index="页面问题" class="{{Html?'activeGoods':''}}">页面问题</text>
       <text bindtap="handleGoods" data-index="其他问题" class="{{Other?'activeGoods':''}}">其他问题</text>
     </view>
     <view class="fb_content">
       <textarea value="{{textVal}}" bindinput="handleTextInput" placeholder="请输入您的问题"></textarea>
       <view class="fb_tool">
         <button bindtap="handleChooseImg">+</button>
         <view class="up_img" wx:for="{{chooseImage}}" wx:key="*key" bindtap="handleRemoveImg" data-index="{{index}}">
          <UpImg src="{{item}}"></UpImg>
         </view>
       </view>
     </view>
     <view class="form_btn_wrap">
       <button type="warn" bindtap="handleFormSubmit">
        <icon  type="success_no_circle" size="23" color="white"> </icon>
        提交
       </button> 
     </view>
   </view>
 </Tabs>
